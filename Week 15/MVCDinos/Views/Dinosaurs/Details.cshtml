    <h1>@Model.DinosaurName</h1>
    <h4>(@Model.Pronounced)</h4>

    <img class="py-3" src="~/images/@image"/>

    <p>This dinosaur lived @Model.LivedYearsAgo years ago.</p>
    <p>Its name means "@Model.NameMeans".</p>
    </div>
}
